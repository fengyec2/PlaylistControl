    "version": "0.2.0",
    "configurations": [

        {
            "name": "Run Program",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal"
        },
        {
            "name": "后台监控模式",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["-b"],
            "console": "integratedTerminal"
        },
        {
            "name": "守护进程模式",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "args": ["-d"],
            "console": "integratedTerminal"
        }
    ]
}